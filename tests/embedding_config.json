{
  "api_settings": {
    "model": "text-embedding-v4",
    "dimensions": 1024,
    "base_url": "https://dashscope.aliyuncs.com/compatible-mode/v1"
  },
  "database": {
    "path": "embeddings.db",
    "backup_enabled": true,
    "backup_interval": "daily"
  },
  "search": {
    "default_limit": 5,
    "similarity_threshold": 0.7,
    "enable_fuzzy_matching": true
  },
  "visualization": {
    "default_method": "tsne",
    "image_format": "png",
    "dpi": 300
  },
  "examples": {
    "demo_texts": [
      "人工智能正在改变我们的生活",
      "机器学习是AI的重要分支",
      "深度学习需要大量计算资源",
      "自然语言处理让计算机理解人类",
      "计算机视觉可以识别图像内容"
    ],
    "categories": [
      "科技", "教育", "医疗", "金融", "娱乐"
    ]
  }
}